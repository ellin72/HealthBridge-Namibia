{
  "name": "healthbridge-namibia",
  "version": "1.0.0",
  "description": "HealthBridge Namibia - Digital Healthcare Platform MVP",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "mobile"
  ],
  "scripts": {
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "dev:mobile": "cd mobile && npm start",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../mobile && npm install",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "jest --config tests/jest.config.js",
    "test:watch": "jest --config tests/jest.config.js --watch",
    "test:coverage": "jest --config tests/jest.config.js --coverage",
    "test:routes": "jest --config tests/jest.config.js tests/routes",
    "test:security": "jest --config tests/jest.config.js tests/security",
    "test:legacy": "cd .. && node tests/route-tests.js"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "axios": "^1.13.2",
    "jest": "^29.7.0"
  },
  "keywords": [
    "healthcare",
    "telehealth",
    "wellness",
    "e-learning"
  ],
  "author": "HealthBridge Namibia Team",
  "license": "PROPRIETARY"
}
